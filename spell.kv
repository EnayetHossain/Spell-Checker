<SpellWidget>    BoxLayout:        orientation: "vertical"        size: root.width, root.height        Label:            id: suggested_words            markup: True            font_name: './Poppins-Regular.ttf'            font_size: 20            size_hint: (1, 9)            color: (237/255, 237/255, 237/255, 1)            background_color: (23/255, 23/255, 23/255, 1)            canvas.before:                Color:                    rgba: self.background_color                Rectangle:                    size: self.size                    pos: self.pos        GridLayout:            cols: 2            rows: 1            TextInput:                id: user_word                markup: True                font_name: './Poppins-Regular.ttf'                font_size: 20                size_hint: (0.8, 1)                background_normal: ''                background_color: (62/255, 50/255, 153/255, 0.3)                foreground_color: (237/255, 237/255, 237/255, 1)            Button:                id: check_word                markup: True                font_name: './Poppins-Medium.ttf'                text: "Check"                font_size: 18                size_hint: (0.2, 1)                background_normal: ''                background_color: (62/255, 50/255, 153/255, 1)                on_press: root.check_word()